<div class="flow-board-header">
	<div class="view">
		{{#if revision.content}}
			{{html revision.content}}
		{{else}}
			<p>{{l10n "flow-header-empty"}}</p>
		{{/if}}

		<div class="flow-board-header-nav">
			{{#if revision.actions.edit}}
				<a href="{{revision.actions.edit.url}}" data-flow-interactive-handler="showEditHeaderForm" class="flow-ui-button flow-ui-progressive flow-ui-quiet flow-board-header-icon flow-ui-tooltip-target" href="/" title="{{revision.actions.edit.title}}">
					<span class="wikiglyph wikiglyph-pencil"></span>
				</a>
			{{/if}}
		</div>
	</div>
	<div class="edit"></div>
</div>
