{{#with revision}}
	<div id="flow-post-{{postId}}"
	     class="flow-post{{#if isModerated}} flow-post-moderated{{/if}}"
	     data-flow-id="{{postId}}"
	     {{#if isMaxThreadingDepth}}
	         data-flow-post-max-depth="1"
	     {{/if~}}
	>
		{{#ifEquals @root.rootBlock.submitted.action "edit-post"}}
			{{#ifEquals @root.rootBlock.submitted.postId postId}}
				{{> flow_edit_post}}
			{{else}}
				{{> flow_post_inner}}
			{{/ifEquals}}
		{{else}}
			{{> flow_post_inner}}
		{{/ifEquals}}

		{{!-- This stuff is also not needed in preview mode --}}
		{{#unless isPreview}}
			{{> flow_post_replies}}
		{{/unless}}
	</div>
{{/with}}
