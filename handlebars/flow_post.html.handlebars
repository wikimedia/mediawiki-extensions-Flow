{{#with revision}}
	<div class="flow-post{{#if isModerated}} flow-post-moderated{{/if}}">
		{{#with author}}
			<span class="flow-author"><a href="{{links.contribs.url}}" title="{{links.contribs.title}}" class="mw-userlink flow-ui-tooltip-target">{{name}}</a> <span class="mw-usertoollinks">(<a href="{{links.talk.url}}" class="new flow-ui-tooltip-target" title="{{links.talk.title}}">{{l10n "Talk"}}</a>{{#if links.block}} | <a class="flow-ui-tooltip-target" href="{{links.block.url}}" title="{{links.block.title}}">{{l10n "block"}}</a>{{/if}})</span></span>
		{{/with}}
		<div class="flow-post-content">
			{{html content}}
		</div>
		<div class="flow-post-meta">
			<span class="flow-post-meta-actions">
				<a href="#flow-post-{{postId}}-form-content" class="flow-ui-progressive flow-ui-quiet">{{l10n "Reply" author}}</a>
				{{#if actions.edit}}
					&#8226;
					<a href="{{actions.edit.url}}" title="{{actions.edit.title}}" class="flow-ui-regressive flow-ui-quiet">{{l10n "Edit"}}</a>
				{{/if}}
			</span>
			{{#if previousRevisionId}}
				<!--span class="WikiFont WikiFont-clock"></span--> {{uuidTimestamp revisionId "edited_ago"}}
				&#8226;
			{{/if}}
			{{uuidTimestamp postId "time_ago"}}
		</div>

		<div class="flow-menu">
			<div class="flow-menu-js-drop"><a href="javascript:void(0);"><span class="WikiFont WikiFont-ellipsis"></span></a></div>
			<ul class="flow-ui-button-container">
				{{#if actions.lock}}
					<li><a class="flow-ui-button flow-ui-progressive flow-ui-quiet flow-ui-thin" href="{{actions.lock.url}}" title="{{actions.lock.title}}"><span class="WikiFont WikiFont-eye-lock"></span> {{l10n "Lock."}}</a></li>
				{{/if}}
				{{#if actions.hide}}
					<li><a class="flow-ui-button flow-ui-quiet flow-ui-thin" href="{{actions.hide.url}}" title="{{actions.hide.title}}"><span class="WikiFont WikiFont-eye-lid"></span> {{l10n "Hide"}}</a></li>
				{{/if}}
				{{#if actions.delete}}
					<li><a class="flow-ui-button flow-ui-regressive flow-ui-quiet flow-ui-thin" href="{{actions.delete.url}}" title="{{actions.delete.title}}"><span class="WikiFont WikiFont-trash-slash"></span> {{l10n "Delete"}}</a></li>
				{{/if}}
				{{#if actions.suppress}}
					<li><a class="flow-ui-button flow-ui-destructive flow-ui-quiet flow-ui-thin" href="{{actions.suppress.url}}" title="{{actions.suppress.title}}"><span class="WikiFont WikiFont-block-slash"></span> {{l10n "Suppress"}}</a></li>
				{{/if}}
			</ul>
		</div>

		{{#eachPost ../rootBlock replies}}
			<!-- eachPost nested replies -->
			{{post ../../rootBlock this}}
		{{/eachPost}}
	</div>
{{/with}}
