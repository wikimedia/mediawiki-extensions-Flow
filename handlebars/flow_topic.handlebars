<div id="flow-topic-{{postId}}"
		 class="flow-topic {{#unless isPreview}}flow-load-interactive{{/unless}} {{#if isModerated}}flow-topic-moderated flow-element-collapsed{{/if}}"
		 data-flow-id="{{postId}}"
		 data-flow-load-handler="topicElement">
	{{>flow_topic_titlebar}}

	{{#if @root.posts}}
		{{#each replies}}
			{{#eachPost @root this}}
				<!-- eachPost topic -->
				{{post @root this}}
			{{/eachPost}}
		{{/each}}
	{{/if}}

	{{#unless isPreview}}
		{{> flow_reply_form}}
	{{/unless}}
</div>
