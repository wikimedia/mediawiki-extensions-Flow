{
	"globals": {
		"console":     true,
		"jQuery":      true,
		"JsDiff":      true,
		"Hogan":       true,
		"QUnit":       true,
		"mw":          true,
		"mediaWiki":   true,
		"strictEqual": true,
		"deepEqual":   true,
		"ok":          true,
		"sinon":       true,
		"ve":          true,
		"Handlebars":  true,
		"initStorer":  true
