<div class="flow-replies">
	{{#each replies}}
		{{#eachPost @root.rootBlock this}}
			<!-- eachPost nested replies -->
			{{post @root.rootBlock this}}
		{{/eachPost}}
	{{/each}}
	{{#ifEquals @root.rootBlock.submitted.postId postId}}
		{{#ifEquals @root.rootBlock.submitted.action "reply"}}
			{{> flow_reply_form}}
		{{/ifEquals}}
	{{/ifEquals}}
</div>
