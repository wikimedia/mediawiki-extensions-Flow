<div class="flow-board-header">
	{{#unless revision}}
		<p>{{l10n "No_header"}}</p>
	{{else}}
		{{#with revision}}
			{{#if content}}
				{{html content}}
			{{else}}
				<p>{{l10n "No_header"}}</p>
			{{/if}}
		{{/with}}
	{{/unless}}
	<div class="flow-board-header-nav">
		<a class="flow-ui-button flow-ui-progressive flow-ui-quiet flow-board-header-icon flow-ui-tooltip-target" href="/" title="{{l10n "Edit"}}"><span class="wikicon wikicon-pencil"></span></a>
	</div>
</div>
