<div class="flow-board">
	{{> flow_errors}}

	{{!-- There is only one post, but the output format matches multi-post output --}}

	{{#each roots}}
		{{#eachPost @root this}}
			<form class="flow-reply-form" method="POST" action="{{actions.reply.url}}">
			    <input type="hidden" name="wpEditToken" value="{{@root.editToken}}" />
				<input type="hidden" name="topic_replyTo" value="{{postId}}" />

				<textarea id="flow-post-{{postId}}-form-content" name="topic_content" class="mw-ui-input" type="text" placeholder="{{l10n "flow-reply-topic-title-placeholder" content}}" data-role="content">
					{{~#ifEquals @root.submitted.postId postId~}}
						{{~@root.submitted.content~}}
					{{~/ifEquals~}}
				</textarea>

				<div class="flow-form-actions flow-form-collapsible">
					<button data-role="submit" class="flow-ui-button flow-ui-constructive">{{l10n "Reply" author}}</button>
					{{previewButton "flow_post"}}
					<button data-flow-interactive-handler="cancelForm" data-role="cancel" class="flow-ui-button flow-ui-destructive flow-ui-quiet">{{l10n "flow-cancel"}}</button>
					<small class="flow-terms-of-use plainlinks">{{TermsOfUse "reply"}}</small>
				</div>
			</form>
		{{/eachPost}}
	{{/each}}
</div>
