<form method="POST" action="{{moderationAction actions @root.submitted.moderationState}}">
	<input type="hidden" name="wpEditToken" value={{@root.editToken}}" />
	<textarea name="topic_reason">
		{{~#if @root.submitted && @root.submitted.reason~}}
			{{~@root.submitted.reason~}}
		{{~/if~}}
	</textarea>
	<div class="flow-form-actions flow-form-collapsible">
		<button data-role="submit" class="flow-ui-button flow-ui-constructive">
			{{~moderationActionText actions @root.submitted.moderationState~}}
		</button>
		<button data-flow-interactive-handler="createForm" data-role="cancel" class="flow-ui-button flow-ui-destructive flow-ui-quiet">
			{{~l10n "Cancel"~}}
		</button>
	</div>
</form>
