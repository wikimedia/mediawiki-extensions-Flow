{{#with revision}}
	<div class="flow-post{{#if isModerated}} flow-post-moderated{{/if}}" data-flow-id="{{postId}}"{{#if isMaxThreadingDepth}} data-flow-post-max-depth="1"{{/if}}>
		{{#with author}}
			<span class="flow-author">
				<a href="{{links.contribs.url}}" title="{{links.contribs.title}}" class="mw-userlink flow-ui-tooltip-target">{{name}}</a>
				<span class="mw-usertoollinks">(<a href="{{links.talk.url}}" class="new flow-ui-tooltip-target" title="{{links.talk.title}}">{{l10n "talkpagelinktext"}}</a>{{#if links.block}} | <a class="flow-ui-tooltip-target" href="{{links.block.url}}" title="{{links.block.title}}">{{l10n "blocklink"}}</a>{{/if}})</span>
			</span>
		{{/with}}
		{{#if isModerated}}
			<div class="flow-moderated-post-content">{{l10n "post_moderation_state" moderateState replyToId moderator.name}}</div>
			<div>@Todo - Add css to toggle between "xxx is hidden by xxx" and real post</div>
		{{/if}}
		<div class="flow-post-content">
			{{escapeContent contentFormat content}}
		</div>
		<div class="flow-post-meta">
			<span class="flow-post-meta-actions">
				{{#if actions.reply}}
					<a href="{{actions.reply.url}}"
						title="{{actions.reply.title}}"
						class="flow-ui-progressive flow-ui-quiet"
						data-flow-interactive-handler="activateReplyPost">
							{{~actions.reply.title~}}
					</a>
				{{/if}}
				{{#if actions.edit}}
					&#8226;
					<a href="{{actions.edit.url}}" title="{{actions.edit.title}}" class="flow-ui-regressive flow-ui-quiet">{{l10n "flow-post-action-edit-post"}}</a>
				{{/if}}
			</span>
			{{#if previousRevisionId}}
				<!--span class="wikiglyph wikiglyph-clock"></span--> {{uuidTimestamp revisionId "edited_ago"}}
				&#8226;
			{{/if}}
			{{uuidTimestamp postId "time_ago"}}
		</div>

		<div class="flow-menu">
			<div class="flow-menu-js-drop"><a href="javascript:void(0);"><span class="wikiglyph wikiglyph-ellipsis"></span></a></div>
			<ul class="flow-ui-button-container">
				{{#if links.post}}
					<li><a class="flow-ui-button flow-ui-quiet flow-ui-thin" href="{{links.post.url}}" title="{{links.post.title}}"> <span class="wikiglyph wikiglyph-link"></span> {{l10n "flow-post-action-view"}}</a></li>
				{{/if}}
				{{#if actions.lock}}
					<li><a class="flow-ui-button flow-ui-progressive flow-ui-quiet flow-ui-thin" href="{{actions.lock.url}}" title="{{actions.lock.title}}"><span class="wikiglyph wikiglyph-eye-lock"></span> {{l10n "TODO-Lock"}}</a></li>
				{{/if}}
				{{#if actions.hide}}
					<li><a class="flow-ui-button flow-ui-quiet flow-ui-thin" href="{{actions.hide.url}}" title="{{actions.hide.title}}"><span class="wikiglyph wikiglyph-eye-lid"></span> {{l10n "flow-post-action-hide-post"}}</a></li>
				{{/if}}
				{{#if actions.delete}}
					<li><a class="flow-ui-button flow-ui-regressive flow-ui-quiet flow-ui-thin" href="{{actions.delete.url}}" title="{{actions.delete.title}}"><span class="wikiglyph wikiglyph-trash"></span> {{l10n "flow-post-action-delete-post"}}</a></li>
				{{/if}}
				{{#if actions.suppress}}
					<li><a class="flow-ui-button flow-ui-destructive flow-ui-quiet flow-ui-thin" href="{{actions.suppress.url}}" title="{{actions.suppress.title}}"><span class="wikiglyph wikiglyph-block"></span> {{l10n "flow-post-action-suppress-post"}}</a></li>
				{{/if}}
			</ul>
		</div>

		{{#each replies}}
			{{#eachPost @root.rootBlock this}}
				<!-- eachPost nested replies -->
				{{post @root.rootBlock this}}
			{{/eachPost}}
		{{/each}}
	</div>
{{/with}}
