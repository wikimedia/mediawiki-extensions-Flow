{{#with revision}}
	<div id="flow-post-{{postId}}"
			 class="flow-post{{#if isModerated}} flow-post-moderated{{/if}}"
			 data-flow-id="{{postId}}"
			 {{#if isMaxThreadingDepth}}
			 data-flow-post-max-depth="1"
			 {{/if}}>
		<div class="flow-post-main">
			{{> flow_errors}}

			{{#with creator}}
				{{> flow_post_author}}
			{{/with}}

			{{#if isModerated}}
				<div class="flow-moderated-post-content">{{l10n "post_moderation_state" moderateState replyToId moderator.name}}</div>
			{{/if}}

			<div class="flow-post-content">
				{{escapeContent content.format content.content}}
			</div>
			{{!-- This stuff is not needed in preview mode --}}
			{{#unless isPreview}}
				{{> flow_post_meta_actions}}
				{{> flow_post_actions}}
			{{/unless}}
		</div>

		{{!-- This stuff is also not needed in preview mode --}}
		{{#unless isPreview}}
			{{> flow_post_replies}}
		{{/unless}}
	</div>
{{/with}}
